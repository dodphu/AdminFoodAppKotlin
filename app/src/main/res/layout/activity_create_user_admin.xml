<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CreateUserAdminActivity"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New User"
        android:textColor="#D60F00"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edt_Name_createAcc_admin"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edtshape"
        android:drawableLeft="@drawable/adduser"
        android:drawablePadding="10dp"
        android:hint="TÃªn"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edt_Email_createAcc_admin"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edtshape"
        android:drawableLeft="@drawable/baseline_mail_outline_24"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edt_Pass_createAcc_admin"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edtshape"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_createAcc_admin"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="#4CAF50"
        android:text="Create new user"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textStyle="bold"/>
</LinearLayout>